@using ForumSystem.Web.ViewModels.Feedback
@model AddFeedBackViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Feedback", FormMethod.Post, new { @class = "form" }))
{
    <div class="row">
        <div class="col-md-1">
            @Html.DisplayFor(m => m.Title)
            Title:
        </div>
        <div class="col-md-2">
            @Html.EditorFor(m => m.Title)
        </div>
    </div>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-1">
            @Html.DisplayFor(m => m.Content)
            Content:
        </div>
        <div class="col-md-2">
@*            @Html.EditorFor(m => m.Content)*@
            <textarea name="Content"></textarea>

        </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}

